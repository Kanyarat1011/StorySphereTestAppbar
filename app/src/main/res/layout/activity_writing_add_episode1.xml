            android:layout_height="2dp"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/divider_line"
            app:layout_constraintEnd_toEndOf="parent"
